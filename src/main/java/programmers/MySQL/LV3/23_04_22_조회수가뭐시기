-- 코드를 입력하세요
SELECT CONCAT(' /home/grep/src/',UGF.BOARD_ID,'/',UGF.FILE_ID,UGF.FILE_NAME,UGF.FILE_EXT) AS FILE_PATH
FROM USED_GOODS_BOARD AS UGB
INNER JOIN USED_GOODS_FILE AS UGF ON UGF.BOARD_ID = UGB.BOARD_ID
WHERE VIEWS = (SELECT USED_GOODS_BOARD.VIEWS FROM USED_GOODS_BOARD ORDER BY USED_GOODS_BOARD.VIEWS DESC LIMIT 1)
ORDER BY UGF.FILE_ID DESC
