-- 코드를 입력하세요
SELECT USER_ID, NICKNAME, 
    CONCAT(UGS.CITY, ' ', UGS.STREET_ADDRESS1, ' ', UGS.STREET_ADDRESS2) AS 전체주소,
    CONCAT(LEFT(UGS.TLNO, 3), '-', MID(UGS.TLNO, 4, 4), '-', RIGHT(UGS.TLNO, 4)) AS 전화번호
FROM USED_GOODS_BOARD AS UGB
JOIN USED_GOODS_USER AS UGS ON UGB.WRITER_ID = UGS.USER_ID
GROUP BY UGB.WRITER_ID
HAVING COUNT(*)>=3
ORDER BY UGB.WRITER_ID DESC
